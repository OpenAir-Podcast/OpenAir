<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application" xmlns="https://specifications.freedesktop.org/appstream/1.0">
    <id type="desktop">org.openair.podcast</id>
    <name>OpenAir</name>
    <summary>A Free and Open Source Podcast Player</summary>
    <developer_name>OpenAir Team and contributors</developer_name>
    <url type="homepage">https://github.com/OpenAir-Podcast/OpenAir</url>
    <metadata_license>MIT</metadata_license>
    <project_license>MIT</project_license>
    
    <mimetypes>
        <mimetype>application/x-feed</mimetype>
        <mimetype>application/rss+xml</mimetype>
        <mimetype>application/atom+xml</mimetype>
    </mimetypes>
    
    <supports>
        <control>pointing</control>
        <control>keyboard</control>
        <control>touch</control>
    </supports>
    <description>
        <p>OpenAir is a free and open-source cross-platform podcast app that empowers you to
            explore and enjoy the vast world of podcasts.</p>
        <p>Features</p>
        <ul>
            <li>Listen to your favorite podcasts</li>
            <li>Discover new podcasts</li>
            <li>Download podcasts for offline listening</li>
            <li>Manage your podcast subscriptions</li>
            <li>Add episodes to queue</li>
        </ul>
    </description>
    
    <launchable type="desktop-id">org.openair.podcast</launchable>
    
